{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "labels": ["RENOVATE", "TRAVAUX", "FORFAIT-RUN"],
    "prHourlyLimit": 50,
    "packageRules": [
      {
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["patch", "minor"],
        "groupName": "devDependencies (non-major)"
      },
      {
        "matchUpdateTypes": ["patch"],
        "addLabels": ["PATCH"]
      },
      {
        "matchUpdateTypes": ["minor"],
        "addLabels": ["MINOR"]
      },
      {
        "matchUpdateTypes": ["major"],
        "addLabels": ["MAJOR"]
      }
    ],

    "extends": [
      "config:base",
      ":preserveSemverRanges",
      ":dependencyDashboard",
      ":rebaseStalePrs",
      ":enableVulnerabilityAlertsWithLabel('security')",
      ":semanticPrefixFixDepsChoreOthers",
      "group:recommended"
    ],

    "enabledManagers": ["regex", "pre-commit", "gitlabci", "gitlabci-include", "terraform", "tflint-plugin", "helmv3", "helm-values", "kustomize"],

    "regexManagers": [
        {
            "description": "Update version from chart.sh",
            "fileMatch": ["(^|/)chart\\.sh$"],
            "matchStrings": [
                "#\\s?renovate\\s?: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( registryUrl=(?<registryUrl>.*?))?( versioning=(?<versioning>.*?))?\\s*CHART_VERSION=['\"](?<currentValue>.*)['\"]"
            ],
            "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}helm{{/if}}"
        },
        {
            "description": "Update version from Chart.yaml",
            "fileMatch": ["(^|/)Chart\\.yaml$"],
            "matchStrings": [
                "#\\s?renovate\\s?: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( registryUrl=(?<registryUrl>.*?))?( versioning=(?<versioning>.*?))?\\s*(version|appVersion):\\s*['\"]?(?<currentValue>.*)['\"]?"
            ],
            "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}helm{{/if}}"
        }
    ]
}
