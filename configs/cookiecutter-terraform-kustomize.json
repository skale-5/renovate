{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "labels": ["RENOVATE"],
    "prHourlyLimit": 50,
    "packageRules": [
      {
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["patch", "minor"],
        "groupName": "devDependencies (non-major)"
      }
    ],
    "extends": [
      "config:base",
      ":preserveSemverRanges",
      ":dependencyDashboard",
      ":rebaseStalePrs",
      ":enableVulnerabilityAlertsWithLabel('security')",
      ":semanticPrefixFixDepsChoreOthers",
      "group:recommended"
    ],

    "enabledManagers": ["regex", "helmv3"],

    "terraform": {
        "commitMessageTopic": "Terraform {{depName}}",
        "fileMatch": [
            "\\.tf$"
        ],
        "pinDigests": false
    },
    "tflint-plugin": {
        "commitMessageTopic": "TFLint plugin {{depName}}",
        "fileMatch": [
            "\\.tflint\\.hcl$"
        ],
        "extractVersion": "^v(?<version>.*)$"
    },
    "kustomize": {
        "commitMessageTopic": "Kustomize manifest {{depName}}",
        "fileMatch": [
            "(^|/)kustomization\\.ya?ml$"
        ]
    },

    "regexManagers": [
        {
            "fileMatch": ["^cookiecutter.json$"],
            "matchStrings": ["terraform_version(?<currentValue>.*?)\\n"],
            "depNameTemplate": "yarn",
            "datasourceTemplate": "npm"
        },
        {
            "fileMatch": ["^cookiecutter.json$"],
            "matchStrings": ["manifest_version(?<currentValue>.*?)\\n"],
            "depNameTemplate": "yarn",
            "datasourceTemplate": "npm"
        }
    ]
}
