{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "labels": ["RENOVATE"],
    "prHourlyLimit": 50,
    "packageRules": [
      {
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["patch", "minor"],
        "groupName": "devDependencies (non-major)"
      }
    ],
    "extends": [
      "config:base",
      ":preserveSemverRanges",
      ":dependencyDashboard",
      ":rebaseStalePrs",
      ":enableVulnerabilityAlertsWithLabel('security')",
      ":semanticPrefixFixDepsChoreOthers",
      "group:recommended"
    ],

    "enabledManagers": ["regex", "helmv3"],
    
    "regexManagers": [
        {
            "description": "Update version from cookiecutter.json",
            "fileMatch": ["^cookiecutter\\.json$"],
            "matchStrings": [
                "\"_renovate\"\\s*:\\s*\"datasource=(?<datasource>.*?) depName=(?<depName>.*?)( registryUrl=(?<registryUrl>.*?))?( versioning=(?<versioning>.*?))?\"\\s*,\\s*\"(chart_version|app_version)\"\\s*:\\s*\"(?<currentValue>.*)\""
            ],
            "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
        },
        {
            "description": "Update version from chart.sh",
            "fileMatch": ["(^|/)chart\\.sh$"],
            "matchStrings": [
                "#\\s?renovate\\s?: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( registryUrl=(?<registryUrl>.*?))?( versioning=(?<versioning>.*?))?\\s*CHART_VERSION=['\"](?<currentValue>.*)['\"]"
            ],
            "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}helm{{/if}}"
        },
        {
            "description": "Update version from Chart.yaml",
            "fileMatch": ["(^|/)Chart\\.yaml$"],
            "matchStrings": [
                "#\\s?renovate\\s?: datasource=(?<datasource>.*?) depName=(?<depName>.*?)( registryUrl=(?<registryUrl>.*?))?( versioning=(?<versioning>.*?))?\\s*(version|appVersion):\\s*['\"]?(?<currentValue>.*)['\"]?"
            ],
            "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}helm{{/if}}"
        }
    ]
}
