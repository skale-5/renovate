{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "labels": ["RENOVATE"],
    "prHourlyLimit": 50,
    "packageRules": [
      {
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["patch", "minor"],
        "groupName": "devDependencies (non-major)"
      }
    ],
    "extends": [
      "config:base",
      ":preserveSemverRanges",
      ":dependencyDashboard",
      ":rebaseStalePrs",
      ":enableVulnerabilityAlertsWithLabel('security')",
      ":semanticPrefixFixDepsChoreOthers",
      "group:recommended"
    ],
    "enabledManagers": ["regex", "helmv3"],

    "regexManagers": [
        {
            "description": "Update Helm Chart from Cookiecutter project",
            "fileMatch": ["^cookiecutter\\.json$"],
            "matchStrings": [
                "\"_renovate\"\\s*:\\s*\"datasource=(?<datasource>.*?) depName=(?<depName>.*?)( registryUrl=(?<registryUrl>.*?))?( versioning=(?<versioning>.*?))?\"\\s*,\\s*\"chart_version\"\\s*:\\s*\"(?<currentValue>.*)\""
            ]
        }
    ]
}
