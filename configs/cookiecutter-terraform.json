{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "labels": ["RENOVATE"],
    "prHourlyLimit": 50,
    "packageRules": [
      {
        "matchDepTypes": ["devDependencies"],
        "matchUpdateTypes": ["patch", "minor"],
        "groupName": "devDependencies (non-major)"
      }
    ],
    "extends": [
      "config:base",
      ":preserveSemverRanges",
      ":dependencyDashboard",
      ":rebaseStalePrs",
      ":enableVulnerabilityAlertsWithLabel('security')",
      ":semanticPrefixFixDepsChoreOthers",
      "group:recommended"
    ],

    "enabledManagers": ["regex", "terraform", "tflint-plugin"],
    
    "regexManagers": [
        {
            "description": "Update TF version from cookiecutter.json",
            "fileMatch": ["^cookiecutter\\.json$"],
            "matchStrings": ["\"terraform_version\"\\s*:\\s*\"(?<currentValue>.*?)\""],
            "depNameTemplate": "hashicorp/terraform",
            "datasourceTemplate": "github-releases",
            "versioningTemplate": "hashicorp"
        },
        {
            "description": "Update version from cookiecutter.json",
            "fileMatch": ["^cookiecutter\\.json$"],
            "matchStrings": [
                "\"_renovate\"\\s*:\\s*\"datasource=(?<datasource>.*?) depName=(?<depName>.*?)( registryUrl=(?<registryUrl>.*?))?( versioning=(?<versioning>.*?))?\"\\s*,\\s*\"(chart_version|app_version)\"\\s*:\\s*\"(?<currentValue>.*)\""
            ],
            "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
        }
    ]
}
